<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/info_posto" />

    <LinearLayout
        android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/colorPrimary"
    android:weightSum="1">


    <TextView
        android:text="TextView"
        android:textColor="@color/preto"
        android:textSize="15dp"
        android:lines="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nome_end" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/azul_escuro" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Atendimento"
            android:textColor="@color/preto"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1.19" />

        <RatingBar
            android:numStars="5"
            android:stepSize="0.5"
            style="@style/btn_RatingBar_indicador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/estrela_atendimento" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Qualidade do Produto"
            android:textColor="@color/preto"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_weight="1" />

        <RatingBar
            android:numStars="5"
            android:stepSize="0.5"
            style="@style/btn_RatingBar_indicador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/estrela_qualidade" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/azul_escuro" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="Traçar Rota  "
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="right|center_vertical"
                android:textColor="@color/preto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView11"
                android:layout_weight="0.49" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                app:srcCompat="@drawable/ic_seta_tracar_rota"
                android:id="@+id/btn_tracar_rota" />
        </LinearLayout>

        <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/azul_escuro" />

        <ListView
            android:id="@+id/precos_combustiveis_list"
            android:layout_width="match_parent"
            android:layout_height="115dp" />

        <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/azul_escuro" />

    <TextView
        android:text="Serviços"
        android:textColor="@color/preto"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView12" />

        <ListView
            android:id="@+id/servicos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.19" />

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.1">

        <Button
            android:text="atualizar"
            style="@style/btn"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:id="@+id/btn_atualizar"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    </LinearLayout>
</LinearLayout>