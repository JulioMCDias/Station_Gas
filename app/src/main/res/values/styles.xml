<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- <item name="actionBarStyle">@style/MeuAppActionBar</item> -->
        <!-- <item name="android:textColorPrimary">@color/azul_escuro</item> -->
    </style>

    <style name="btn">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/btn_style</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="btn_RatingBar_indicador">
        <item name="android:isIndicator">true</item>
        <item name="android:progressDrawable">@drawable/custom_ratingbar_selector_indicador</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">23dip</item>
    </style>

    <style name="btn_RatingBar">
        <item name="android:isIndicator">false</item>
        <item name="android:progressDrawable">@drawable/custom_ratingbar_selector</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">35dip</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

